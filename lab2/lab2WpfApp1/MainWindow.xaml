<Window x:Class="lab2WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2WpfApp1"
        mc:Ignorable="d"
        Title="TextEditor" Height="250" Width="450">
    <Window.Resources>
        <LinearGradientBrush x:Key="LinearPanelBrush">
            <GradientStop Color="Yellow" Offset="0"></GradientStop>
            <GradientStop Color="Aqua" Offset="0.5"></GradientStop>
            <GradientStop Color="Yellow" Offset="0.8"></GradientStop>
            <GradientStop></GradientStop>
        </LinearGradientBrush>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="White"></Setter>
        </Style>
    </Window.Resources>
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Background="{StaticResource LinearPanelBrush}">
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Width="45" Height="45">
                    <Image ToolTip="Open" Source="/images/open.png" />
                </Button>
                <Button Width="45" Height="45">
                    <Image ToolTip="Erase" Source="/images/erase.png"/>
                </Button>
                <Button Width="45" Height="45">
                    <Image ToolTip="Copy" Source="/images/copy.png"/>
                </Button>
                <Button Width="45" Height="45">
                    <Image ToolTip="Insert" Source="/images/insert.png"/>
                </Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Background="{StaticResource LinearPanelBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Visible"></TextBox>
                <DockPanel Grid.Row="1" Margin="10">
                    <Button DockPanel.Dock="Bottom" Width="30">OK</Button>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
